extends layout.pug

block content
  main
    form#contact-form
      h2 Contactez-nous !
      .content
        .group
          label(for="firstname") Prénom
          input#firstname(type="text", name="firstname")
          small.error-firstname.hidden *Le prénom que vous avez renseigné n'est pas valide
        .group
          label(for="lastname") Nom
          input#lastname(type="text", name="lastname")
          small.error-lastname.hidden *Le nom que vous avez renseigné n'est pas valide
        .group
          label(for="email") Adresse email
          input#email(type="email", name="email")
          small.error-email.hidden *L'adresse email que vous avez renseignée n'est pas valide
        .group
          label(for="message") Votre message
          textarea#message(name="message")
      .btn-container
        button.btn.btn-primary
          i.fas.fa-paper-plane
          |Envoyer 
        button.btn.btn-danger(type="button") Annuler